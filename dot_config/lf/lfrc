# IFG lf stuff

# Options
set shell bash # needs to be posix compliant
set shellopts '-eu' # makes shell commands safer
set cursorpreviewfmt "\033[7;2m" # Use the `dim` attribute instead of underline for the cursor in the preview pane

# preview with ctpv
set preview
set previewer ctpv
set cleaner ctpvclear
&ctpv -s $id
&ctpvquit $id

set filesep "\n"
set ifs "\n"
set scrolloff 10
set watch true
set icons
# dynamic ratios on startup
%{{
  w=$(tput cols)
  if [ $w -le 80 ]; then
    lf -remote "send $id set ratios 1:2"
  else
    lf -remote "send $id set ratios 1:2:3"
  fi
}}
set drawbox
set wrapscroll # make scrolling wrap

# warning about nested instances
&[ $LF_LEVEL -eq 1 ] || lf -remote "send $id echoerr \"Warning: You're in a nested lf instance!\""

# use eza to provide the file information shown in the bottom left corner
cmd on-select &{{
    lf -remote "send $id set statfmt \"$(eza -ld --color=always "$f" | sed 's/\\/\\\\/g;s/"/\\"/g')\""
}}

cmd on-cd &{{
  # show current directory in window title (not standard so might not work on someplaces)
  # '&' commands run silently in background (which is what we want here),
  # but are not connected to stdout.
  # To make sure our escape sequence still reaches stdout we pipe it to /dev/tty
  printf "ðŸ“ [%s]" "$(basename "$(pwd | sed "s|$HOME|~|")")" | chtermname

  zoxide add "$(pwd)"
}}
# also run at startup
on-cd

# edit config and reload lf
cmd edit-config ${{
    $EDITOR ~/.config/lf/lfrc
    lf -remote "send $id source ~/.config/lf/lfrc"
}}
map C edit-config

# drag and drop
cmd drag-drop &{{
  ripdrag -t -x -n * .*
}}
map D drag-drop

# Commands
cmd open ${{
  case $(file --mime-type "$(readlink -f $f)" -b) in
  text/*) $EDITOR $fx ;;
  image/x-xcf) setsid gimp $f >/dev/null 2>&1 & ;;
  image/*) setsid imv $f "$(dirname "$f")" & ;;
  audio/*) mpv --input-ipc-server=/tmp/mpvsoc$(date +%%s) $f ;;
  video/*) setsid mpv --input-ipc-server=/tmp/mpvsoc$(date +%%s) $f -quiet >/dev/null 2>&1 & ;;
  application/pdf) setsid zathura $fx >/dev/null 2>&1 & ;;
  *)
    for f in $fx; do
      setsid $OPENER $f >/dev/null 2>&1 &
    done
    ;;
  esac
}}

# share file to opendrive
cmd share ${{
  opendrive_upload "$fx"
}}

cmd detox ${{ # detox name (clean file name)
  set -f
  detox -r $fx
}}

cmd delete ${{
  set -f
  printf "%s\n\t" "$fx"
  printf "Delete? [y/N] "
  read ans
  if [ $ans = "y" ] || [ $ans = "Y" ]; then
    rm -rf -- $fx
  fi
}}

cmd trash ${{
  set -f
  printf "%s\n\t" "$fx"
  printf "Trash? [y/N] "
  read ans
  if [ $ans = "y" ] || [ $ans = "Y" ]; then
    trash-put -- $fx
  fi
}}

cmd decompress ${{ # inflate archive
  set -f
  ouch decompress $fx
  lf -remote "reload"
}}

cmd serve ${{ # open webserver in port 3000
  set -f
  python -m http.server 3000
}}

cmd tar ${{ # compress using tar gz
  set -f
  mkdir -p "$1"
  cp -r $fx "$1"
  tar czf "$1".tar.gz "$1"
  rm -rf "$1"
}}

cmd zip ${{ # compress using zip
  set -f
  mkdir -p "$1"
  cp -r $fx "$1"
  zip -r "$1".zip "$1"
  rm -rf "$1"
}}

cmd shortcuts ${{
  dir="$(shortcuts cd)"
  [ -z "$dir" ] && exit
  lf -remote "send $id cd ${dir}"
}}

cmd fzf_jump ${{
  # find . -maxdepth 4 -printf '%P\n'  # this will show hidden files/dirs
  res="$(find * -maxdepth 4 | fzf --reverse --header='Jump to' | sed 's/\\/\\\\/g;s/"/\\"/g')"
  if [ -d "$res" ]; then
    cmd="cd"
  else
    cmd="select"
  fi
  lf -remote "send $id $cmd \"$res\""
}}

cmd select-all &{{
    get_files() {
        if [ "$lf_hidden" = 'false' ]; then
            find "$PWD" -mindepth 1 -maxdepth 1 -not -name '.*' -print0
        else
            find "$PWD" -mindepth 1 -maxdepth 1 -print0
        fi |
        xargs -0 printf ' %q'
    }

    lf -remote "send $id :unselect; toggle $(get_files)"
}}

cmd mkdir %IFS=" "; mkdir -- "$*"
cmd touch %IFS=" "; touch -- "$*"

cmd mkdir_sel %{{
    IFS=" "
    mkdir -p -- "$*"
    lf -remote "send $id select \"$*\""
}}

# Mappings
cmd q :quit
cmd Q :quit

map <c-z> $ kill -STOP $PPID # put lf into the background

map <enter> shell # use <enter> for shell commands
map <esc> reload
map <c-r> reload
map Q quit
map <c-j> push 10j
map <c-k> push 10k
map g top

# dedicated keys for file opener actions
map o open $f
map O open $f
# execute current file
map x $$f
map X !$f

map <c-a> select-all
map a push :mkdir_sel<space>
map A push :mkdir<space>
map t push :touch<space>
map r rename
map Rf :rename; cmd-end; cmd-delete-home
map Rd detox
map Re :rename; cmd-delete-home
map <delete> delete
map <backspace2> trash

# Shortcuts and navigation
map , shortcuts
map <c-f> :fzf_jump
