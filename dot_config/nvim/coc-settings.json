{
  "coc.preferences.extensionUpdateCheck": "never",
  "diagnostic.errorSign": "!",
  "diagnostic.warningSign": ".",
  "diagnostic.infoSign": "?",
  "diagnostic.hintSign": "ðŸ’¡",
  "suggest.enablePreview": true,
  "suggest.labelMaxLength": 60,
  "suggest.maxCompleteItemCount": 25,
  "suggest.minTriggerInputLength": 2,
  "suggest.snippetIndicator": " â–º",
  "suggest.disableKind": true,
  "suggest.disableMenu": true,
  "session.directory": "~/.local/share/nvim/sessions/",
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Args": ["--ignore=E501"],
  "python.formatting.provider": "black",
  "ltex.languageToolHttpServerUri": "https://languagetool.tail.joaocosta.dev",
  "diagnostic-languageserver.linters": {
    "shellcheck": {
      "command": "shellcheck",
      "debounce": 100,
      "args": ["--format", "json", "-"],
      "sourceName": "shellcheck",
      "parseJson": {
        "line": "line",
        "column": "column",
        "endLine": "endLine",
        "endColumn": "endColumn",
        "message": "${message} [${code}]",
        "security": "level"
      },
      "securities": {
        "error": "error",
        "warning": "warning",
        "info": "info",
        "style": "hint"
      }
    }
  },
  "diagnostic-languageserver.filetypes": {
    "bash": ["shellcheck"],
    "sh": ["shellcheck"]
  },
  "diagnostic-languageserver.formatters": {
    "prettier": {
      "command": "prettier",
      "args": ["--prose-wrap", "always", "--stdin-filepath", "%filepath"],
      "rootPatterns": [
        ".prettierrc",
        ".prettierrc.json",
        ".prettierrc.toml",
        ".prettierrc.json",
        ".prettierrc.yml",
        ".prettierrc.yaml",
        ".prettierrc.json5",
        ".prettierrc.js",
        ".prettierrc.cjs",
        "prettier.config.js",
        "prettier.config.cjs"
      ]
    },
    "shfmt": {
      "command": "shfmt"
    }
  },
  "diagnostic-languageserver.formatFiletypes": {
    "css": ["prettier"],
    "html": ["prettier"],
    "javascript": ["prettier"],
    "json": ["prettier"],
    "markdown": ["prettier"],
    "bash": ["shfmt"],
    "sh": ["shfmt"]
  }
}
